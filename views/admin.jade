doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Mikkelin kaupungin kesätyöhakemus
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css')
    link(rel='stylesheet', href='/css/admin.css')
  body
    #wrapper
      // Sidebar
      #sidebar-wrapper
        ul.sidebar-nav
          li.sidebar-brand
            a(href='#')
              | Kesätyöhakemukset
          li
            span Hakemuksen tila:
            br
            select.filter(name='state')
              option(value='') Kaikki
              option(value='waiting') Käsittelemättä
              option(value='processing') Käsittelyssä
              option(value='reserved') Varattu
              option(value='notified') Ilmoitettu
              option(value='confirmed') Tulo varmistettu
              option(value='contract') Työsopimus tehty
              option(value='denied') Hylätty
          li
            span Ensisijainen toive:
            br
            select.filter(name='primary')
              option(value='') Kaikki
              each position in positions
                option(value=position.code) #{position.name}
          li
            span Toissijainen toive:
            br
            select.filter(name='secondary')
              option(value='') Kaikki
              each position in positions
                option(value=position.code) #{position.name}
      #page-content-wrapper
        .container-fluid
          .row
            .col-lg-12
              a#menu-toggle.btn.btn-default(href='#menu-toggle') Piilota/näytä valikko
              h1 #{state}
              table#applicationTable
                thead
                  tr
                    th Nimi
                    th Osoite
                    th Puhelin
                    th Email
                tbody
                  each application in applications
                    tr(data-application-id=application._id)
                      td
                        | #{application.firstName} #{application.lastName}
                      td #{application.address}
                      td #{application.phone}
                      td #{application.email}
    script(src='https://code.jquery.com/jquery-1.12.0.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')
    script(src='/lib/moment-with-locales.min.js')
    script(src='https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js')
    script(src='/js/admin.js')
